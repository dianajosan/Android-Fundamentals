            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:clickable="true"
            android:id="@+id/card_london"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@color/yellow_light">

            <ImageView
                android:id="@+id/img_london"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/london" />
            <TextView
                android:id="@+id/textview_london"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="London"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/black"> </TextView>
            <RatingBar
                android:id="@+id/rating_bar_london"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"/>



            <CheckBox
                android:id="@+id/fav_card_london"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:button="@drawable/ic_favorite_red" />


